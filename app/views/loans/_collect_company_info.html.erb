<h3>Apply for Loan</h3>
<ul class="nav nav-tabs">
  <li>
    <a href="#">User Info</a>
  </li>
  <li class="active">
    <a href="#" date-remote='true'>Company Info</a>
  </li>
  <li>
    <a href="#" data-remote='true'>Upload Documents</a>
  </li>
</ul>
<br>
<%= form_for @intermediate_source, url: url_for(controller: 'loans', action: 'collect_company_info'), :html => { :class => "form-horizontal", method: :post, remote: true } do |f| %>
<div class="form-group">
  <label class="control-label col-sm-2" for="email">Company PAN:</label>
  <div class="col-sm-10">
    <%= f.text_field :company_pan, required: true, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2" for="pwd">Type:</label>
  <div class="col-sm-10">
    <%= f.select :company_type, options_for_select(["Private Limited", "Proprietorship", "Partnership"]),{}, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2" for="email">Annual Turn Over:</label>
  <div class="col-sm-10">
    <%= f.text_field :annual_turn_over, required: true, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2" for="email">Date of Founding:</label>
  <div class="col-sm-10">
    <%= f.date_field :founding_date, required: true, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-primary">Next: Upload Proofs</button>
  </div>
</div>
<% end %>
