<h3>Apply for Loan</h3>
<ul class="nav nav-tabs">
  <li>
    <a href="#">User Info</a>
  </li>
  <li>
    <a href="#" date-remote='true'>Company Info</a>
  </li>
  <li class="active">
    <a href="#" data-remote='true'>Upload Documents</a>
  </li>
</ul>
<br>
<%= form_for @proof, url: url_for(controller: 'loans', action: 'complete_process'), :html => { :class => "form-horizontal",method: :post, multipart: true, remote: true } do |f| %>
<div class="form-group">
  <label class="control-label col-sm-2" for="email">Upload PAN:</label>
  <div class="col-sm-10">
    <%= f.file_field :pan, required: true %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2" for="pwd">Upload Aadhar:</label>
  <div class="col-sm-10">
    <%= f.file_field :aadhar, required: true %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</div>
<% end %>
