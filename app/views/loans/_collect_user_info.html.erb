<h3>Apply for Loan</h3>
<ul class="nav nav-tabs">
  <li class="active">
    <a href="#">User Info</a>
  </li>
  <li>
    <a href="#" date-remote='true'>Company Info</a>
  </li>
  <li>
    <a href="#" data-remote='true'>Upload Documents</a>
  </li>
</ul>
<br>
<%= form_for @intermediate_source, url: url_for(controller: 'loans', action: 'collect_user_info'), :html => { :class => "form-horizontal", method: :post, remote: true } do |f| %>
<div class="form-group">
  <label class="control-label col-sm-2" for="email">Name:</label>
  <div class="col-sm-10">
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2" for="pwd">Email:</label>
  <div class="col-sm-10">
    <%= f.email_field :email, required: true, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2" for="email">Pan Card Number:</label>
  <div class="col-sm-10">
    <%= f.text_field :pan_card_number, required: true, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2" for="email">Mobile:</label>
  <div class="col-sm-10">
    <%= f.text_field :mobile, required: true, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-primary">Next: Company Info</button>
  </div>
</div>
<% end %>
