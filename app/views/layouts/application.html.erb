  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Lending System</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/loans/loan_request">Check your submitted application</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => "btn btn-danger"%></a></li>
          <% else %>
          <li><%= link_to 'Signin', new_user_session_path, :class => "btn btn-success" %></a></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
        <!--/span-->
      </div>
      <!--/row-->


    </div>
